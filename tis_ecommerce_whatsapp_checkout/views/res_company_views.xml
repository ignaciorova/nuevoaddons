<odoo>
    <record id="view_company_form_whatsapp" model="ir.ui.view">
        <field name="name">res.company.form.whatsapp</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='social_media']" position="after">
                <group name="whatsapp_settings" string="WhatsApp Settings">
                    <field name="message"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>