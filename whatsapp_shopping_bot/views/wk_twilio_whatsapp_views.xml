<odoo>
    <record id="wk_twilio_whatsapp_form" model="ir.ui.view">
        <field name="name">wk.twilio.whatsapp.form</field>
        <field name="model">wk.twilio.whatsapp</field>
        <field name="arch" type="xml">
            <form string="Twilio - WhatsApp Configuration">
                <sheet>
                    <separator string="Twilio Settings"/>
                    <group>
                        <group>
                            <field name="user_mobile_no" required="1" placeholder="e.g. +919898989898"/>
                            <field name="twilio_whatsapp_number" placeholder="Twilio Phone Number (e.g. +12044993370)"/>
                        </group>
                        <group>
                            <field name="account_whatsapp_sid"/>
                            <field name="auth_whatsapp_token"/>
                        </group>
                    </group>
                    <group>
                        <separator string="Message Configuration"/>
                        <field name="message_template"/>
                    </group>
                    <group>
                        <button name="test_conn_twilio_whatsapp" string="Test Connection" type="object" class="btn-primary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_wk_twilio_whatsapp" model="ir.actions.act_window">
        <field name="name">Twilio WhatsApp Configuration</field>
        <field name="res_model">wk.twilio.whatsapp</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wk_twilio_whatsapp_form"/>
        <field name="target">current</field>
        <field name="context">{}</field>
        <field name="limit">80</field>
    </record>

    <record id="whatsapp_order_history_tree" model="ir.ui.view">
        <field name="name">whatsapp.order.history.tree</field>
        <field name="model">whatsapp.order.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sale_order_id"/>
                <field name="partner_id"/>
                <field name="whatsapp_number"/>
                <field name="sent_date"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="whatsapp_order_history_kanban" model="ir.ui.view">
        <field name="name">whatsapp.order.history.kanban</field>
        <field name="model">whatsapp.order.history</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="sale_order_id"/>
                <field name="partner_id"/>
                <field name="whatsapp_number"/>
                <field name="sent_date"/>
                <field name="status"/>
                <field name="message_body"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_details">
                            <strong><field name="sale_order_id"/></strong>
                            <div><field name="partner_id"/></div>
                            <div>WhatsApp: <field name="whatsapp_number"/></div>
                            <div>Sent: <field name="sent_date"/></div>
                            <div>Status: <field name="status"/></div>
                            <div>Message: <field name="message_body"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="whatsapp_order_history_form" model="ir.ui.view">
        <field name="name">whatsapp.order.history.form</field>
        <field name="model">whatsapp.order.history</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="sale_order_id"/>
                        <field name="partner_id"/>
                        <field name="whatsapp_number"/>
                        <field name="sent_date"/>
                        <field name="status"/>
                        <field name="error_message" attrs="{'invisible': [('status', '!=', 'failed')]}"/>
                        <field name="message_body"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_whatsapp_order_history" model="ir.actions.act_window">
        <field name="name">WhatsApp Order History</field>
        <field name="res_model">whatsapp.order.history</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Track WhatsApp messages sent for orders.
            </p>
        </field>
    </record>

    <menuitem id="menu_twilio_whatsapp_config" name="Twilio-WhatsApp Configuration" parent="website.menu_website_configuration" sequence="80" action="action_wk_twilio_whatsapp"/>
    <menuitem id="menu_whatsapp_order_history" name="WhatsApp Order History" parent="website.menu_website_configuration" sequence="85" action="action_whatsapp_order_history"/>
</odoo>