<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_zad_xlsx_export_wizard" model="ir.ui.view">
        <field name="name">zad.xlsx.export.wizard.form</field>
        <field name="model">zad.xlsx.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export XLSX">
                <group>
                    <field name="template_id" options="{'no_create_edit': True}"/>
                    <field name="file_name"/>
                    <field name="file_data" filename="file_name" readonly="1"/>
                </group>
                <footer>
                    <button string="Generate" type="object" name="action_generate" class="btn-primary"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
