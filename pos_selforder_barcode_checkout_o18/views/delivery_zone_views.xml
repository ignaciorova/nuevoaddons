<odoo>
  <record id="view_delivery_zone_tree" model="ir.ui.view">
    <field name="name">pos.selforder.delivery.zone.tree</field>
    <field name="model">pos.selforder.delivery.zone</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="pos_config_id"/>
        <field name="city"/>
        <field name="zip_prefix"/>
        <field name="min_order_amount"/>
        <field name="free_delivery_threshold"/>
        <field name="delivery_fee"/>
        <field name="eta_min"/>
        <field name="eta_max"/>
      </tree>
    </field>
  </record>

  <record id="view_delivery_zone_form" model="ir.ui.view">
    <field name="name">pos.selforder.delivery.zone.form</field>
    <field name="model">pos.selforder.delivery.zone</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="pos_config_id"/>
            <field name="city"/>
            <field name="zip_prefix"/>
          </group>
          <group>
            <field name="min_order_amount"/>
            <field name="free_delivery_threshold"/>
            <field name="delivery_fee"/>
          </group>
          <group>
            <field name="eta_min"/>
            <field name="eta_max"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
