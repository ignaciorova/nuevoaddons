<odoo>
    <template id="cart_whatsapp_checkout" inherit_id="website_sale.cart" name="WhatsApp Checkout Button">
        <xpath expr="//div[@class='oe_cart']" position="inside">
            <t t-if="error">
                <div class="alert alert-warning" role="alert">
                    <t t-esc="error"/>
                </div>
            </t>
            <t t-if="website.whatsapp_checkout == 'public_users' or (website.whatsapp_checkout == 'login_users' and request.env.user != request.env.ref('base.public_user'))">
                <a href="/shop/whatsapp_checkout" class="btn whatsapp-btn whatsapp_checkout">
                    <i class="fa fa-whatsapp me-2"></i>Checkout via WhatsApp
                </a>
            </t>
        </xpath>
    </template>
</odoo>