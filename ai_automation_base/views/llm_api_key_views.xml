<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- LLM API Key List View -->
        <record id="view_llm_api_key_list" model="ir.ui.view">
            <field name="name">llm.api.key.list</field>
            <field name="model">llm.api.key</field>
            <field name="arch" type="xml">
                <list string="LLM API Keys">
                    <field name="name"/>
                    <field name="provider_type"/>
                    <field name="is_active"/>
                    <field name="created_by"/>
                    <field name="created_date"/>
                    <field name="last_used"/>
                    <field name="usage_count"/>
                </list>
            </field>
        </record>
        
        <!-- LLM API Key Form View -->
        <record id="view_llm_api_key_form" model="ir.ui.view">
            <field name="name">llm.api.key.form</field>
            <field name="model">llm.api.key</field>
            <field name="arch" type="xml">
                <form string="LLM API Key">
                    <header>
                        <button name="test_api_key" string="Test API Key" type="object" class="btn-primary"/>
                        <field name="is_active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="API Key Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="provider_type"/>
                                <field name="encrypted_key" readonly="1"/>
                                <field name="created_by"/>
                                <field name="created_date"/>
                            </group>
                            <group>
                                <field name="last_used"/>
                                <field name="usage_count"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="API Key" name="api_key">
                                <group>
                                    <field name="encrypted_key" readonly="1"/>
                                    <field name="encrypted_key_filename" readonly="1"/>
                                </group>
                                <div class="alert alert-info" role="alert">
                                    <strong>Security Note:</strong> API keys are encrypted and stored securely. 
                                    Only AI Administrators can access API keys.
                                </div>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="notes" placeholder="Additional notes about this API key..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- LLM API Key Search View -->
        <record id="view_llm_api_key_search" model="ir.ui.view">
            <field name="name">llm.api.key.search</field>
            <field name="model">llm.api.key</field>
            <field name="arch" type="xml">
                <search string="Search LLM API Keys">
                    <field name="name"/>
                    <field name="provider_type"/>
                    <field name="created_by"/>
                    <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Provider Type" name="group_by_provider" context="{'group_by': 'provider_type'}"/>
                        <filter string="Status" name="group_by_status" context="{'group_by': 'is_active'}"/>
                        <filter string="Created By" name="group_by_creator" context="{'group_by': 'created_by'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- LLM API Key Action -->
        <record id="action_llm_api_key" model="ir.actions.act_window">
            <field name="name">LLM API Keys</field>
            <field name="res_model">llm.api.key</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first API key!
                </p>
                <p>
                    Store and manage API keys for LLM providers securely.
                    API keys are encrypted and only accessible to AI Administrators.
                </p>
            </field>
        </record>
        
        <!-- LLM API Key Menu -->
        <menuitem id="menu_llm_api_key"
                  name="API Keys"
                  parent="menu_ai_automation_root"
                  action="action_llm_api_key"
                  sequence="20"/>
        
    </data>
</odoo> 