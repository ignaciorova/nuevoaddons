<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- Form View -->
    <record id="view_ai_tool_form" model="ir.ui.view">
        <field name="name">ai.tool.form</field>
        <field name="model">ai.tool</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_test_tool" type="object" string="Test" />
                    <field name="status" widget="statusbar" options="{'clickable': '1'}" />
                </header>
                <sheet>
                    <div name="button_box" id="button_box" class="oe_button_box">
                        <button name="action_get_agents" class="oe_stat_button " type="object" icon="fa-user-secret">
                            <field string="Agents" name="ai_agent_count" widget="statinfo" />
                        </button>
                        <button name="action_get_quests" class="oe_stat_button " type="object" icon="fa-rocket">
                            <field string="Quests" name="quest_count" widget="statinfo" />
                        </button>
                        <button name="action_get_sessions" class="oe_stat_button" type="object" icon="fa-flag-checkered">
                            <field string="Sessions" name="session_count" widget="statinfo" />
                        </button>
                        <button name="action_get_session_lines" class="oe_stat_button" type="object" icon="fa-money">
                            <field string="Tokens" name="session_line_count" widget="statinfo" />
                        </button>
                    </div>
                    <field name="image_128" widget="image" class="oe_avatar" />
                    <div class="oe_title">
                      <h1 class="d-flex flex-row">
                        <field name="is_favorite" nolabel="1" widget="boolean_favorite" class="me-2" />
                        <field name="name" class="o_text_overflow" placeholder="t.ex. Handboken" modifiers="{&quot;required&quot;: true}" />
                      </h1>
                    </div>
                    <group>
                        <group>
                            <field name="tool" />
                            <field name="tool_lib" />
                            <field name="tool_api_key" />
                            <field name="last_run" />
                        </group>
                        <group>
                            <field name="debug" widget="boolean_toggle"  />
                            <!-- #if VERSION == 16.0 -->
                            <field name="tag_ids" widget="many2many_tags" />
                            <!-- #endif -->
                        </group>
                    </group>
                </sheet>
                <!-- #if VERSION >= "18.0" -->
                <chatter/>
                <!-- #elif VERSION <= "17.0" -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
                <!-- #endif -->
            </form>
        </field>
    </record>
    <!-- List View -->
    <record id="view_ai_tool_tree" model="ir.ui.view">
        <field name="name">ai.tool.tree</field>
        <field name="model">ai.tool</field>
        <field name="arch" type="xml">
            <!-- #if VERSION >= "18.0" -->
            <list>
                <field name="name" />
                <field name="tool" />
                <field name="tool_lib" />
                <field name="status" />
                <field name="last_run" />
                <field name="is_favorite" />
            </list>
            <!-- #elif VERSION <= "17.0" -->
            <tree>
                <field name="name" />
                <field name="tool" />
                <field name="tool_lib" />
                <field name="status" />
                <field name="last_run" />
                <field name="is_favorite" />
            </tree>
            <!-- #endif -->
        </field>
    </record>
    <!-- Search View -->
    <record id="view_ai_tool_search" model="ir.ui.view">
        <field name="name">ai.tool.search</field>
        <field name="model">ai.tool</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="tool" />
                <field name="tool_lib" />
                <!-- #if VERSION == 16.0 -->
                <field name="tag_ids" />
                <!-- #endif -->
                <filter string="Favorites" name="favorites" domain="[('is_favorite', '=', True)]" />
                <filter string="Debug Mode" name="debug" domain="[('debug', '=', True)]" />
                <filter string="Active" name="active" domain="[('status', '=', 'active')]" />
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}" />
                    <filter string="Tool" name="group_by_tool" context="{'group_by': 'tool'}" />
                </group>
            </search>
        </field>
    </record>
    <!-- Kanban View -->
    <record id="view_ai_tool_kanban" model="ir.ui.view">
        <field name="name">ai.tool.kanban</field>
        <field name="model">ai.tool</field>
        <field name="arch" type="xml">
            <kanban highlight_color="color" quick_create="false">
                <field name="color" />
                <field name="debug" />
                <field name="id" />
                <field name="is_favorite" />
                <field name="last_run" />
                <field name="name" />
                <field name="status" />
                <field name="status_color" />
                <field name="tool" />
                <field name="tool_lib" />
                <templates>
                  <!-- Menu -->
                  <t t-name="menu">
                    <t t-if="widget.editable">
                      <a role="menuitem" type="open" class="dropdown-item">Edit</a>
                    </t>
                    <t t-if="widget.deletable">
                      <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                    </t>
                    <field name="color" widget="kanban_color_picker" />
                  </t>
                  <!-- Card -->
                  <t t-name="card" class="flex-row">
                    <div class="col-2 me-2 oe_kanban_color_#{record.color.raw_value}">
                      <field name="base_image_128" alt="Agent Image" widget="image" options="{'img_class': 'object-fit-cover'}" />
                    </div>
                    <main t-attf-class="ms-2 oe_kanban_card oe_kanban_global_click oe_kanban_color_#{record.color.raw_value or 0} ">
                      <div class="col-9">
                        <div class="o_project_kanban_main d-flex align-items-baseline gap-1">
                          <div class="o_text_overflow d-flex align-items-center">
                            <field name="is_favorite" widget="boolean_favorite" nolabel="1" force_save="1" style="margin-right: 5px;" />
                            <field class="fw-bold fs-5" name="name" />
                          </div>
                        </div>
                        <div>
                          Tool:
                          <field name="tool" />
                        </div>
                        <div>
                          Library:
                          <field name="tool_lib" />
                        </div>
                        <div class="d-flex mt-auto align-items-center">
                          <field name="ai_agent_ids" widget="many2many_tags" options="{'color_field': 'color'}" class="o_text_overflow" />
                        </div>

                      </div>
                      <footer>
                          <div class="d-flex justify-content-between align-items-center w-100">
                            <div class="d-flex align-items-center">
                              <span class="fa fa-clock-o me-2" title="Dates" />
                              <field name="last_run" t-if="record.last_run.value != False" />
                            </div>
                            <div class="d-flex align-items-center">
                              <span class="fa fa-bug" t-if="record.debug.raw_value" style="margin-right: 5px;"></span>
                              <span t-att-class="'o_status_bubble mx-0 o_color_bubble_' + record.status_color.value" t-att-title="record.status.value" />
                            </div>
                          </div>
                        </footer>
                    </main>
                  </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!-- Calendar View -->
    <record id="view_ai_tool_calendar" model="ir.ui.view">
        <field name="name">ai.tool.calendar</field>
        <field name="model">ai.tool</field>
        <field name="arch" type="xml">
            <calendar string="AI Tool" date_start="last_run" color="status">
                <field name="name" />
                <field name="tool" />
                <field name="status" />
            </calendar>
        </field>
    </record>
    <!-- Action -->
    <record id="action_ai_tool" model="ir.actions.act_window">
        <field name="name">AI Tools</field>
        <field name="res_model">ai.tool</field>
        <!-- #if VERSION >= "18.0" -->
        <field name="view_mode">kanban,list,form,calendar</field>
        <!-- #elif VERSION <= "17.0" -->
        <field name="view_mode">kanban,tree,form,calendar</field>
        <!-- #endif -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first AI Tool!</p>
        </field>
    </record>
    <!-- Menu Item -->
    <menuitem id="menu_ai_tool" name="AI Tools" parent="ai_agent.menu_ai_agent_configuration" action="action_ai_tool" sequence="20" />


    <record id="test_tool_view" model="ir.ui.view">
        <field name="name">ai.tool.test.wizard</field>
        <field name="model">ai.tool.test.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="test_tool_input" string="Search" />
                </group>
                <group>
                    <field name="is_raise_error"/>
                    <field name="filename" invisible="1"/>
                    <field name="file" filename="filename"/>
                    <field name="object_name"/>
                    <field name="object_id"/>
                </group>
                <footer>
                    <button name="test_tool" string="Search" type="object" class="oe_highlight"/>
                    <button name="cancel" string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
