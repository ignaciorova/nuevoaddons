<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ai_agent.QuestSelectorDialogBlueprint" owl="1">
        <div data-oe-protected="true" t-att-data-embedded-props="embeddedProps" data-embedded="draw" contenteditable="false"/>
    </t>

    <div t-name="ai_agent.QuestSelectorDialog" owl="1">
        <t t-set="title">Select a Quest</t>
        <Dialog title="title" size="'lg'">
            <div class="row g-3">
                <t t-foreach="props.quests" t-as="quest" t-key="quest.id">
                    <div class="col-12 col-md-4">
                        <div class="card h-100 rounded border-warning cursor-pointer"
                             t-att-data-quest-id="quest.id"
                             t-on-click="() => this.onQuestSelect(quest)">
                            <div class="card-body p-3">
                                <div class="d-flex align-items-center mb-2">
                                    <h5 class="card-title mb-0" t-esc="quest.name"/>
                                </div>
                                <p class="card-text text-muted mb-0" t-esc="quest.sub_description"/>
                            </div>
                        </div>
                    </div>
                </t>
            </div>

            <t t-set-slot="footer">
                <div class="flex justify-content-md-end w-100" style="display:flex;">
                    <button class="btn btn-secondary" t-on-click="props.close">Discard</button>
                </div>
            </t>
        </Dialog>
    </div>

</templates>


