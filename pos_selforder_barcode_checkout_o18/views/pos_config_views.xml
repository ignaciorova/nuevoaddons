<odoo>
  <record id="view_pos_config_form_selforder_barcode_o18" model="ir.ui.view">
    <field name="name">pos.config.form.selforder.barcode.o18</field>
    <field name="model">pos.config</field>
    <field name="inherit_id" ref="point_of_sale.view_pos_config_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook" position="inside">
        <page string="Self-Order">
          <group string="Barcode Checkout">
            <field name="so_barcode_checkout_enabled"/>
            <field name="so_barcode_match_field" attrs="{'invisible': [('so_barcode_checkout_enabled','=',False)]}"/>
            <field name="so_barcode_auto_bind" attrs="{'invisible': [('so_barcode_checkout_enabled','=',False)]}"/>
          </group>
          <group string="Delivery">
            <field name="so_enable_delivery"/>
            <field name="so_delivery_zone_ids" attrs="{'invisible': [('so_enable_delivery','=',False)]}">
              <tree editable="bottom">
                <field name="sequence"/>
                <field name="name"/>
                <field name="city"/>
                <field name="zip_prefix"/>
                <field name="min_order_amount"/>
                <field name="free_delivery_threshold"/>
                <field name="delivery_fee"/>
                <field name="eta_min"/>
                <field name="eta_max"/>
              </tree>
              <form>
                <group>
                  <field name="name"/>
                  <field name="sequence"/>
                  <field name="city"/>
                  <field name="zip_prefix"/>
                  <field name="min_order_amount"/>
                  <field name="free_delivery_threshold"/>
                  <field name="delivery_fee"/>
                  <field name="eta_min"/>
                  <field name="eta_max"/>
                </group>
              </form>
            </field>
            <field name="so_delivery_fee_product_id" attrs="{'invisible': [('so_enable_delivery','=',False)]}"/>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
