<odoo>
    <template id="wk_whtsappPublic_form" name="Address Form For Whatsapp">
        <div class="modal fade" id="AddressModal" tabindex="-1" role="dialog" aria-labelledby="AddressModalLabel">
            <div class="modal-dialog modal-lg mt-5" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addressModalLabel">Address Form</h5>
                        <button type="button" class="close checkout_whtsapp_cancel" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&amp;times;</span>
                        </button>
                    </div>
                    <t t-call="whatsapp_shopping_bot.wk_formFields"/>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary checkout_whtsapp">Purchase</button>
                        <button type="button" class="btn btn-secondary checkout_whtsapp_cancel" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="wk_formFields" name="Address Field Form Whatsapp">
        <div class="modal-body">
            <div class="col-12 col-xl order-xl-1">
                <div>
                    <t t-if="error" t-foreach="error.get('error_message', [])" t-as="err">
                        <h4 class="text-danger" t-esc="err"/>
                    </t>
                    <form action="/checkout/whatsapp" method="post" class="checkout_autoformat">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <input type="hidden" name="submitted" value="1"/>
                        <input type="hidden" name="partner_id" t-att-value="partner_id or '0'"/>
                        <input type="hidden" name="record_id" t-att-value="record_id or '0'"/>
                        <input type="hidden" name="isproduct" t-att-value="isproduct"/>
                        <input type="hidden" name="whatsappConfigNumber" t-att-value="whatsappConfigNumber or '0'"/>
                        <input type="hidden" name="sale_order_id" t-att-value="sale_order_id or '0'"/>
                        <div class="row">
                            <div t-attf-class="mb-3 #{error.get('name') and 'o_has_error' or ''} col-lg-12 div_name">
                                <font color="red">*</font> &amp;nbsp;<label class="col-form-label" for="name">Name</label>
                                <input type="text" name="name" t-attf-class="form-control #{error.get('name') and 'is-invalid' or ''}" t-att-value="'name' in checkout and checkout['name']"/>
                            </div>
                            <div class="w-100"/>
                            <t t-if="mode[1] == 'billing'">
                                <div t-attf-class="mb-3 #{error.get('email') and 'o_has_error' or ''} col-lg-6" id="div_email">
                                    <font color="red">*</font> &amp;nbsp;<label class="col-form-label" for="email">Email</label>
                                    <input type="email" name="email" t-attf-class="form-control #{error.get('email') and 'is-invalid' or ''}" t-att-value="'email' in checkout and checkout['email']"/>
                                </div>
                            </t>
                            <div t-attf-class="mb-3 #{error.get('phone') and 'o_has_error' or ''} col-lg-6" id="div_phone">
                                <font color="red">*</font> &amp;nbsp;<label class="col-form-label" for="phone">Phone</label>
                                <input type="tel" name="phone" t-attf-class="form-control #{error.get('phone') and 'is-invalid' or ''}" t-att-value="'phone' in checkout and checkout['phone']"/>
                            </div>
                            <div t-attf-class="mb-3 #{error.get('whatsappnumber') and 'o_has_error' or ''} col-lg-6" id="div_whtsapp">
                                <font color="red">*</font> &amp;nbsp;<label class="col-form-label" for="whatsapp">Whatsapp Number</label>
                                <input type="tel" name="whatsappnumber" t-attf-class="form-control #{error.get('whatsappnumber') and 'is-invalid' or ''}" t-att-value="'whatsappnumber' in checkout and checkout['whatsappnumber']"/>
                            </div>
                            <div class="w-100"/>
                            <div t-attf-class="mb-3 #{error.get('street') and 'o_has_error' or ''} col-lg-12 div_street">
                                <font color="red">*</font> &amp;nbsp;<label class="col-form-label" for="street">Street <span class="d-none d-md-inline"> and Number</span></label>
                                <input type="text" name="street" t-attf-class="form-control #{error.get('street') and 'is-invalid' or ''}" t-att-value="'street' in checkout and checkout['street']"/>
                            </div>
                            <div t-attf-class="mb-3 #{error.get('street2') and 'o_has_error' or ''} col-lg-12 div_street2">
                                <label class="col-form-label label-optional" for="street2">Street 2</label>
                                <input type="text" name="street2" t-attf-class="form-control #{error.get('street2') and 'is-invalid' or ''}" t-att-value="'street2' in checkout and checkout['street2']"/>
                            </div>
                            <div t-attf-class="mb-3 #{error.get('city') and 'o_has_error' or ''} col-lg-6 div_city">
                                <font color="red">*</font> &amp;nbsp;<label class="col-form-label" for="city">City</label>
                                <input type="text" name="city" t-attf-class="form-control #{error.get('city') and 'is-invalid' or ''}" t-att-value="'city' in checkout and checkout['city']"/>
                            </div>
                            <t t-if="'zip' in zip_city and zip_city.index('zip') &gt; zip_city.index('city')">
                                <div t-attf-class="mb-3 #{error.get('zip') and 'o_has_error' or ''} col-md-4 div_zip">
                                    <font color="red">*</font> &amp;nbsp;<label class="col-form-label label-optional" for="zip">Zip Code</label>
                                    <input type="text" name="zip" t-attf-class="form-control #{error.get('zip') and 'is-invalid' or ''}" t-att-value="'zip' in checkout and checkout['zip']"/>
                                </div>
                            </t>
                            <div class="w-100"/>
                            <div t-attf-class="mb-3 #{error.get('country_id') and 'o_has_error' or ''} col-lg-6 div_country">
                                <font color="red">*</font> &amp;nbsp;<label class="col-form-label" for="country_id">Country</label>
                                <select id="country_id" name="country_id" t-attf-class="form-control #{error.get('country_id') and 'is-invalid' or ''}" t-att-mode="mode[1]">
                                    <option value="">Country...</option>
                                    <t t-foreach="countries" t-as="c">
                                        <option t-att-value="c.id" t-att-selected="c.id == (country and country.id or -1)">
                                            <t t-esc="c.name"/>
                                        </option>
                                    </t>
                                </select>
                            </div>
                            <div t-attf-class="mb-3 #{error.get('state_id') and 'o_has_error' or ''} col-lg-6 div_state" t-att-style="(not country or not country.state_ids) and 'display: none'">
                                <label class="col-form-label" for="state_id">State / Province</label>
                                <select name="state_id" t-attf-class="form-control #{error.get('state_id') and 'is-invalid' or ''}" data-init="1">
                                    <option value="">State / Province...</option>
                                    <t t-foreach="country and country.state_ids or []" t-as="s">
                                        <option t-att-value="s.id" t-att-selected="s.id == ('state_id' in checkout and country and checkout['state_id'] != '' and int(checkout['state_id']))">
                                            <t t-esc="s.name"/>
                                        </option>
                                    </t>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </template>

    <template id="wk_cart_add_to_whtsapp" inherit_id="website_sale.navigation_buttons" name="Purchase on Whatsapp">
        <xpath expr="//t[@t-if='website_sale_order and website_sale_order.website_order_line']" position="inside">
            <t t-call="whatsapp_shopping_bot.wk_whtsappPublic_form"/>
            <a href="#" role="button" class="btn iscart w-100 mr-3 mt-2 btn-success a-clickpublic" aria-label="Purchase on Whatsapp" t-att-data-sale_order_id="website_sale_order.id" title="Purchase on Whatsapp" style="flex-basis: 50%;">
                <span class="fa fa-whatsapp"/>
                <span>Purchase on Whatsapp</span>
            </a>
        </xpath>
    </template>
</odoo>