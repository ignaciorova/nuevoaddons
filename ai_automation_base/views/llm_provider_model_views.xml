<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- LLM Provider Model List View -->
        <record id="view_llm_provider_model_list" model="ir.ui.view">
            <field name="name">llm.provider.model.list</field>
            <field name="model">llm.provider.model</field>
            <field name="arch" type="xml">
                <list string="LLM Provider Models">
                    <field name="name"/>
                    <field name="model_code"/>
                    <field name="provider_type"/>
                    <field name="is_active"/>
                    <field name="supports_chat"/>
                    <field name="supports_text_generation"/>
                    <field name="supports_embeddings"/>
                    <field name="supports_streaming"/>
                    <field name="max_tokens"/>
                    <field name="context_length"/>
                </list>
            </field>
        </record>
        
        <!-- LLM Provider Model Form View -->
        <record id="view_llm_provider_model_form" model="ir.ui.view">
            <field name="name">llm.provider.model.form</field>
            <field name="model">llm.provider.model</field>
            <field name="arch" type="xml">
                <form string="LLM Provider Model">
                    <header>
                        <field name="is_active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Model Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="model_code"/>
                                <field name="provider_type"/>
                                <field name="max_tokens"/>
                                <field name="context_length"/>
                            </group>
                            <group>
                                <field name="currency_id"/>
                                <field name="input_cost_per_1k_tokens"/>
                                <field name="output_cost_per_1k_tokens"/>
                            </group>
                        </group>
                        <group string="Capabilities">
                            <field name="supports_chat"/>
                            <field name="supports_text_generation"/>
                            <field name="supports_embeddings"/>
                            <field name="supports_streaming"/>
                            <field name="supports_function_calling"/>
                        </group>
                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" placeholder="Description of the model and its capabilities..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- LLM Provider Model Search View -->
        <record id="view_llm_provider_model_search" model="ir.ui.view">
            <field name="name">llm.provider.model.search</field>
            <field name="model">llm.provider.model</field>
            <field name="arch" type="xml">
                <search string="Search LLM Provider Models">
                    <field name="name"/>
                    <field name="model_code"/>
                    <field name="provider_type"/>
                    <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                    <filter string="Supports Chat" name="supports_chat" domain="[('supports_chat', '=', True)]"/>
                    <filter string="Supports Text Generation" name="supports_text" domain="[('supports_text_generation', '=', True)]"/>
                    <filter string="Supports Embeddings" name="supports_embeddings" domain="[('supports_embeddings', '=', True)]"/>
                    <filter string="Supports Streaming" name="supports_streaming" domain="[('supports_streaming', '=', True)]"/>
                    <filter string="Supports Function Calling" name="supports_function" domain="[('supports_function_calling', '=', True)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Provider Type" name="group_by_provider" context="{'group_by': 'provider_type'}"/>
                        <filter string="Status" name="group_by_status" context="{'group_by': 'is_active'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- LLM Provider Model Action -->
        <record id="action_llm_provider_model" model="ir.actions.act_window">
            <field name="name">LLM Provider Models</field>
            <field name="res_model">llm.provider.model</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first model!
                </p>
                <p>
                    Configure LLM models available from different providers.
                    Each model has specific capabilities and pricing information.
                </p>
            </field>
        </record>
        
        <!-- LLM Provider Model Menu -->
        <menuitem id="menu_llm_provider_model"
                  name="Models"
                  parent="menu_ai_automation_root"
                  action="action_llm_provider_model"
                  sequence="30"/>
        
    </data>
</odoo> 