<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
      
        <record id="ollama_product_template" model="product.template">
            <field name="name">Ollama</field>
            <field name="is_llm">True</field>
            <field name="llm_library">langchain_ollama</field>
            <field name="llm_type">ChatOllama</field>
            <field name="llm_etype">OllamaEmbeddings</field>
            <field name="fallback_api_key_name">ollama_api_key</field>
            <field name="image_1920" type="base64" file="ai_agent/static/img/ollama-logo.png" /> 
        </record>

        <record id="ollama_product_attribute_value_deepseek-r1-32b" model="product.attribute.value">
            <field name="name">deepseek-r1:32b</field>
            <field name="attribute_id" ref="ai_agent.product_attribute_model" />
            <field name="has_endpoint" eval="True"/>
            <field name="tpm">2000000</field>
            <field name="rpm">10000</field>
        </record>

        <record id="ollama_product_attribute_value_nomic-embed-text" model="product.attribute.value">
            <field name="name">nomic-embed-text</field>
            <field name="attribute_id" ref="ai_agent.product_attribute_model" />
            <field name="is_embedded" eval="True"/>
            <field name="has_endpoint" eval="True"/>
            <field name="tpm">2000000</field>
            <field name="rpm">10000</field>
        </record>

        <record id="ollama_product_attribute_value_snowflake-arctic-embed" model="product.attribute.value">
            <field name="name">snowflake-arctic-embed</field>
            <field name="attribute_id" ref="ai_agent.product_attribute_model" />
            <field name="is_embedded" eval="True"/>
            <field name="has_endpoint" eval="True"/>
            <field name="tpm">2000000</field>
            <field name="rpm">10000</field>
        </record>

        <record id="ollama_product_template_attribute_line_model" model="product.template.attribute.line">
            <field name="product_tmpl_id" ref="ollama_product_template" />
            <field name="attribute_id" ref="product_attribute_model" />
            <field name="value_ids" eval="[(6, 0, [
                            ref('ollama_product_attribute_value_nomic-embed-text'),
                            ref('ollama_product_attribute_value_snowflake-arctic-embed'),
                            ref('ollama_product_attribute_value_deepseek-r1-32b'),
                    ])]" />
        </record>

        <record id="ollama_product_template_attribute_line_data_type" model="product.template.attribute.line">
            <field name="product_tmpl_id" ref="ollama_product_template" />
            <field name="attribute_id" ref="product_attribute_data_type" />
            <field name="value_ids" eval="[(6, 0, [ref('product_attribute_value_text')])]" />
        </record>

        <record id="ollama_product_template_attribute_line_token_type" model="product.template.attribute.line">
            <field name="product_tmpl_id" ref="ollama_product_template" />
            <field name="attribute_id" ref="product_attribute_token_type" />
            <field name="value_ids" eval="[(6, 0, [
         ref('product_attribute_value_input_tokens'),
         ref('product_attribute_value_output_tokens'),
         ])]" />
        </record>

    </data>
</odoo>
